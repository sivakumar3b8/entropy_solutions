<p id="notice"><%= notice %></p>

<h1>Friends</h1>

 <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone number</th>
      <th>Bank account number</th>
      <th>Ifsc code</th>
      <th>Swift number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.phone_number %></td>
        <td><%= friend.bank_account_number %></td>
        <td><%= friend.ifsc_code %></td>
        <td><%= friend.swift_number %></td>        
        <td><%= link_to 'Show', friend , class: "btn btn-outline-success"%></td>
        <td><%= link_to 'Edit', edit_friend_path(friend), class: "btn btn-outline-info" %></td>
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class: "btn btn-outline-success" %>
