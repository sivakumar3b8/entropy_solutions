<p id="notice"><%= notice %></p>

<h1>Friends</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone number</th>
      <th>Bank account number</th>
      <th>Ifsc code</th>
      <th>Swift number</th>
      <th>Index</th>
      <th>New</th>
      <th>Show</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.phone_number %></td>
        <td><%= friend.bank_account_number %></td>
        <td><%= friend.ifsc_code %></td>
        <td><%= friend.swift_number %></td>
        <td><%= friend.index %></td>
        <td><%= friend.new %></td>
        <td><%= friend.show %></td>
        <td><%= link_to 'Show', friend %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

